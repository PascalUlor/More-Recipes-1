    "lodash": "^4.17.4",
    "mocha": "^3.5.3",
    "moment": "^2.20.1",
    "node-sass": "^4.5.3",
    "nodemailer": "^4.4.1",
    "nodemon": "^1.12.1",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "prop-types": "^15.6.0",
    "rc-pagination": "^1.14.0",
